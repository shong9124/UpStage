<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home"
    tools:context=".view.presentation.upload.PresentationFragment">

    <ScrollView
        android:id="@+id/sv_presentation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발표 대본이 준비되어 있나요?\n있다면 아래 빈칸에 작성해주세요."
                style="@style/ibm_plex_h1"
                android:textColor="@color/primary"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="40dp"/>

            <EditText
                android:id="@+id/et_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_edit_text_type_stroke"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                style="@style/ibm_plex_h1"
                android:textColor="@color/primary"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"

                app:layout_constraintTop_toBottomOf="@id/tv_ment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_select_situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 상황에서 발표를 진행하는지 선택해주세요."
                style="@style/ibm_plex_h1"
                android:textColor="@color/primary"

                app:layout_constraintTop_toBottomOf="@id/et_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="40dp"/>

            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_select_situation">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_presentation"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    style="@style/ibm_plex_h1"
                    android:background="@drawable/btn_round"
                    android:gravity="center"
                    android:text="발표"
                    android:textColor="@color/gray_ff"
                    app:layout_constraintDimensionRatio="1.5:1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_speech"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    style="@style/ibm_plex_h1"
                    android:background="@drawable/btn_round"
                    android:gravity="center"
                    android:text="연설"
                    android:textColor="@color/gray_ff"
                    app:layout_constraintDimensionRatio="1.5:1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_interview"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    style="@style/ibm_plex_h1"
                    android:background="@drawable/btn_round"
                    android:gravity="center"
                    android:text="면접"
                    android:textColor="@color/gray_ff"
                    app:layout_constraintDimensionRatio="1.5:1" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발표 준비가 끝났습니다!\n발표한 음성 파일을 업로드해주세요."
                style="@style/ibm_plex_h1"
                android:textColor="@color/primary"

                app:layout_constraintTop_toBottomOf="@id/ll_buttons"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="40dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_upload"
                android:layout_width="0dp"
                android:layout_height="50dp"
                style="@style/ibm_plex_h1"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="음성 파일 업로드"
                android:textColor="@color/gray_ff"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="80dp"

                app:layout_constraintTop_toBottomOf="@id/tv_upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_upload_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 파일 없음"
                style="@style/ibm_plex_h1"
                android:textColor="@color/gray_7f"

                app:layout_constraintTop_toBottomOf="@id/btn_upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발표 제목을 입력해주세요."
                style="@style/ibm_plex_h1"
                android:textColor="@color/primary"

                app:layout_constraintTop_toBottomOf="@id/tv_upload_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="40dp"/>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_edit_text_type_stroke"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                style="@style/ibm_plex_h1"
                android:textColor="@color/primary"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"

                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_save"

                tools:ignore="Autofill" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="50dp"
                style="@style/ibm_plex_h1"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="저장"
                android:textColor="@color/gray_ff"
                app:layout_constraintDimensionRatio="1.5:1"
                android:layout_marginEnd="30dp"

                app:layout_constraintTop_toTopOf="@id/et_title"
                app:layout_constraintBottom_toBottomOf="@id/et_title"
                app:layout_constraintStart_toEndOf="@id/et_title"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_p"
                android:layout_width="0dp"
                android:layout_height="50dp"
                style="@style/ibm_plex_h1"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="완료"
                android:textColor="@color/gray_ff"
                android:layout_marginEnd="30dp"
                android:layout_marginVertical="30dp"
                app:layout_constraintDimensionRatio="1.5:1"

                app:layout_constraintTop_toBottomOf="@id/et_title"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <include
        android:id="@+id/bottom_nav"
        layout="@layout/view_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_image_stage"
    tools:context=".view.sign.SignUpCompleteFragment">

    <TextView
        android:id="@+id/tv_sign_up_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입을 완료하였습니다!"
        style="@style/ibm_plex_t2"
        android:textColor="@color/gray_ff"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_ready"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tv_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무대에 오를 준비를 시작해볼까요?"
        style="@style/ibm_plex_h1"
        android:textColor="@color/gray_ff"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_complete"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_up_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up_complete"
        android:layout_width="0dp"
        android:layout_height="50dp"
        style="@style/ibm_plex_h1"
        android:background="@drawable/btn_round"
        android:gravity="center"
        android:text="UpStage 시작하기"
        android:textColor="@color/gray_ff"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="80dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
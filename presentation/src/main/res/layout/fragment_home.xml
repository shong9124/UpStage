<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home"
    tools:context=".view.home.HomeFragment">

    <TextView
        android:id="@+id/tv_my_presentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 발표 이력"
        style="@style/ibm_plex_h1"
        android:textColor="@color/primary"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"/>

    <View
        android:id="@+id/view_my_presentation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"

        app:layout_constraintTop_toBottomOf="@id/tv_my_presentation"

        android:background="@drawable/shape_view"
        android:contentDescription="@null"
        app:layout_constraintDimensionRatio="2.3:1" />

    <TextView
        android:id="@+id/tv_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 추이"
        style="@style/ibm_plex_h1"
        android:textColor="@color/primary"

        app:layout_constraintTop_toBottomOf="@id/view_my_presentation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"/>

    <View
        android:id="@+id/view_recent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"

        app:layout_constraintTop_toBottomOf="@id/tv_recent"

        android:background="@drawable/shape_view"
        android:contentDescription="@null"
        app:layout_constraintDimensionRatio="2.3:1" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 반복되는 피드백"
        style="@style/ibm_plex_h1"
        android:textColor="@color/primary"

        app:layout_constraintTop_toBottomOf="@id/view_recent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_my_feedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback" />

    <include
        android:id="@+id/bottom_nav"
        layout="@layout/view_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
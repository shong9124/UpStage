<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_presentation_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image_stage"
    tools:context=".view.presentation.result.PresentationResultFragment">

    <ScrollView
        android:id="@+id/sv_presentation_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:constraint_referenced_ids="tv_result_ment, tv_score, tv_feedback_1, tv_feedback_2, tv_feedback_3, btn_return_to_home" />

            <TextView
                android:id="@+id/tv_result_ment"
                style="@style/ibm_plex_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="당신의 발표 점수는"

                android:textColor="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_score"
                style="@style/ibm_plex_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="76점"

                android:textColor="@color/secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_result_ment" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_feedback_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:constraint_referenced_ids="view_feedback_1, tv_speed, tv_speed_int, tv_speed_unit, tv_speed_result" />

            <View
                android:id="@+id/view_feedback_1"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_circle"
                app:layout_constraintEnd_toStartOf="@id/view_feedback_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_score" />

            <TextView
                android:id="@+id/tv_speed"
                style="@style/ibm_plex_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="분당 단어 수"
                android:textColor="@color/gray_ff"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_1"
                app:layout_constraintStart_toStartOf="@id/view_feedback_1"
                app:layout_constraintTop_toTopOf="@id/view_feedback_1" />

            <TextView
                android:id="@+id/tv_speed_int"
                style="@style/ibm_plex_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="85.37"
                android:textColor="@color/s32"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_1"
                app:layout_constraintStart_toStartOf="@id/view_feedback_1"
                app:layout_constraintTop_toBottomOf="@id/tv_speed" />

            <TextView
                android:id="@+id/tv_speed_unit"
                style="@style/ibm_plex_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="wpm"
                android:textColor="@color/gray_ff"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_1"
                app:layout_constraintStart_toStartOf="@id/view_feedback_1"
                app:layout_constraintTop_toBottomOf="@id/tv_speed_int" />

            <TextView
                android:id="@+id/tv_speed_result"
                style="@style/ibm_plex_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="기준 97.43 wpm 대비\n12.3% 느림"
                android:textColor="@color/gray_ff"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_1"
                app:layout_constraintStart_toStartOf="@id/view_feedback_1"
                app:layout_constraintTop_toBottomOf="@id/tv_speed_unit" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_feedback_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:constraint_referenced_ids="view_feedback_2, tv_stability, tv_stability_int, tv_stability_result" />

            <View
                android:id="@+id/view_feedback_2"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_feedback_1"
                app:layout_constraintTop_toBottomOf="@id/tv_score" />

            <TextView
                android:id="@+id/tv_stability"
                style="@style/ibm_plex_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="속도 변동폭"
                android:textColor="@color/gray_ff"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_2"
                app:layout_constraintStart_toStartOf="@id/view_feedback_2"
                app:layout_constraintTop_toTopOf="@id/view_feedback_2" />

            <TextView
                android:id="@+id/tv_stability_int"
                style="@style/ibm_plex_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="26.1%"
                android:textColor="@color/s32"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_2"
                app:layout_constraintStart_toStartOf="@id/view_feedback_2"
                app:layout_constraintTop_toBottomOf="@id/tv_stability" />

            <TextView
                android:id="@+id/tv_stability_result"
                style="@style/ibm_plex_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="허용 범위 29.3%이내\n안정적"
                android:textColor="@color/gray_ff"
                app:layout_constraintEnd_toEndOf="@id/view_feedback_2"
                app:layout_constraintStart_toStartOf="@id/view_feedback_2"
                app:layout_constraintTop_toBottomOf="@id/tv_stability_int" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_feedback_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:constraint_referenced_ids="tv_feedback_1, tv_feedback_2, tv_feedback_3" />

            <TextView
                android:id="@+id/tv_feedback_1"
                style="@style/ibm_plex_h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"

                android:text="잉여표현\n4,81 sec/min\n
주의 구간\n
30.0s - 40.0s : 2.50s\n
40.0s - 50.0s : 2.28s\n
70.0s - 80.0s : 1.36s"
                android:textColor="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_feedback_1" />

            <TextView
                android:id="@+id/tv_feedback_2"
                style="@style/ibm_plex_h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"

                android:text="발음 정확도\n
72.1%\n
주의 구간\n
전 우리의 [선조들은] 자유속이 잉태된 ..\n
이 대륙에 [나왔습니다.] 지금 우리는 ..\n
..줘야 마땅하고 [옳은] 일인 것입니다..\n
...을 한정하거나 [봉헌하거나] 신성하게 할.."
                android:textColor="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feedback_1" />

            <TextView
                android:id="@+id/tv_feedback_3"
                style="@style/ibm_plex_h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"

                android:text="최종 피드백\n
전체적으로 안정적인 템포로 발표를 이끌었습니다.\n
평균 및 구간별 속도 모두 허용 범위 안에 있어 청자가 따라가기 좋았다는 점이 가장 큰 장점입니다.\n
다만, 중간에 잉여표현(“어…”, “그…”)이 분당 4.8초 수준으로 조금 눈에 띕니다.\n
특히 30–40초 구간에 2.5초가 몰려 있어 전달력이 잠깐 흐려졌어요.\n
다음 요점으로 넘어갈 때 필러가 늘어나는 패턴입니다.\n
한 박자 멈추고 생각을 정리한 뒤, 전환 문구(“첫째, 결과적으로…”)를 미리 정해 두고 꺼내 쓰면 필러가 크게 줄 겁니다.\n
\n
정리하면, 속도·안정성은 충분히 강점이고, 이제 필러 억제와 발음 디테일 교정을 조금만 손보면 전달력이 한 단계 올라갑니다.\n
\n
다음 연습 루틴을 추천해요:\n
\n
   1. 전환부마다 쓸 큐 단어 3–4개를 미리 스크립트에 표시하고, 실제 낭독 때 필러 대신 큐 단어로 진입.\n
   2. 최소쌍 드릴(예: ‘선/손’, ‘낳/나’)로 문제 음절만 느리게-길게-또렷하게 3회 반복 후 문장 속도에 재삽입.\n
   3. 문장 끝 반 박–한 박 정적을 습관화해 삭제·연음 오류를 줄이기.\n
\n
지금의 안정적인 리듬 위에 위 세 가지만 얹으면, 내용 이해도와 전문적인 인상이 동시에 좋아질 거예요.\n
계속 이 페이스 유지하면서 디테일만 다듬어봅시다!"
                android:textColor="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feedback_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_return_to_home"
                style="@style/ibm_plex_h1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="40dp"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="백스테이지로 돌아가기"
                android:textColor="@color/gray_ff"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feedback_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/logo"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/iv_step_1"
        app:layout_constraintDimensionRatio="1.7:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_step_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="iv_step_1, tv_result_step_1" />

    <ImageView
        android:id="@+id/iv_step_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_step_filled"
        app:layout_constraintBottom_toTopOf="@id/iv_dash_1"
        app:layout_constraintEnd_toStartOf="@id/tv_result_step_1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <TextView
        android:id="@+id/tv_result_step_1"
        style="@style/ibm_plex_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="발표 연습을 마쳤습니다!\n이제 무대에 오를 시간이에요."
        android:textColor="@color/gray_ff"
        app:layout_constraintBottom_toBottomOf="@id/iv_step_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_step_1"
        app:layout_constraintTop_toTopOf="@id/iv_step_1" />

    <ImageView
        android:id="@+id/iv_dash_1"
        android:layout_width="24dp"
        android:layout_height="56dp"
        android:layout_marginVertical="8dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_dash_line"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/iv_step_2"
        app:layout_constraintEnd_toEndOf="@id/iv_step_1"
        app:layout_constraintStart_toStartOf="@id/iv_step_1"
        app:layout_constraintTop_toBottomOf="@id/iv_step_1" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_step_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="iv_step_2, tv_result_step_2" />

    <ImageView
        android:id="@+id/iv_step_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_step_filled"
        app:layout_constraintBottom_toTopOf="@id/iv_dash_2"
        app:layout_constraintEnd_toEndOf="@id/iv_step_1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/iv_step_1"
        app:layout_constraintTop_toBottomOf="@id/iv_dash_1" />

    <TextView
        android:id="@+id/tv_result_step_2"
        style="@style/ibm_plex_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="관객들이 들어서고 있습니다."
        android:textColor="@color/gray_ff"
        app:layout_constraintBottom_toBottomOf="@id/iv_step_2"
        app:layout_constraintStart_toEndOf="@id/iv_step_2"
        app:layout_constraintTop_toTopOf="@id/iv_step_2" />

    <ImageView
        android:id="@+id/iv_dash_2"
        android:layout_width="24dp"
        android:layout_height="56dp"
        android:layout_marginVertical="8dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_dash_line"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/iv_step_3"
        app:layout_constraintEnd_toEndOf="@id/iv_step_1"
        app:layout_constraintStart_toStartOf="@id/iv_step_1"
        app:layout_constraintTop_toBottomOf="@id/iv_step_2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_step_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="iv_step_3, tv_result_step_3" />

    <ImageView
        android:id="@+id/iv_step_3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_step_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_step_1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/iv_step_1"
        app:layout_constraintTop_toBottomOf="@id/iv_dash_2" />

    <TextView
        android:id="@+id/tv_result_step_3"
        style="@style/ibm_plex_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="발표가 완료 되었어요!\n피드백을 확인해볼까요?"
        android:textColor="@color/gray_ff"
        app:layout_constraintBottom_toBottomOf="@id/iv_step_3"
        app:layout_constraintStart_toEndOf="@id/iv_step_3"
        app:layout_constraintTop_toTopOf="@id/iv_step_3"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>
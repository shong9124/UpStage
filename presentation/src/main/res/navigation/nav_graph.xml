<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.capstone2.presentation.view.sign.SignInFragment"
        android:label="fragment_sign_in"
        app:route="sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.capstone2.presentation.view.sign.SignUpFragment"
        android:label="fragment_sign_up"
        app:route="sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signUpCompleteFragment"
            app:destination="@id/signUpCompleteFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpCompleteFragment"
        android:name="com.capstone2.presentation.view.sign.SignUpCompleteFragment"
        android:label="fragment_sign_up_complete"
        app:route="sign_up_complete"
        tools:layout="@layout/fragment_sign_up_complete" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.capstone2.presentation.view.home.HomeFragment"
        android:label="fragment_home"
        app:route="home"
        tools:layout="@layout/fragment_home" />
</navigation>
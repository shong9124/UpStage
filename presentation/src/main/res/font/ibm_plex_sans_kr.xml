<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        font-weight : font

        400 : Normal or Regular
        500 : Medium
        600 : Semi Bold
        700 : Bold
    -->

    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/ibm_plex_sans_kr_regular"/>

    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/ibm_plex_sans_kr_medium"/>

    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/ibm_plex_sans_kr_semibold"/>

    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/ibm_plex_sans_kr_bold"/>

</font-family>